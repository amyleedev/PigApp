<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/def" />
<RelativeLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_toRightOf="@+id/news_image"
    android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/comment_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="名字"
        android:maxLines="2"
        android:textSize="17sp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/comment_area_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="地区"
        android:maxLines="2"
        android:textSize="17sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
</RelativeLayout>


        <TextView
            android:id="@+id/comment_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_image"
            android:ellipsize="end"
            android:hint="04-02 12:11"
            android:singleLine="true"
            android:textColor="@color/cutting_line"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/comment_concent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:hint="我是内容"
        android:singleLine="true"
        android:textSize="15sp"
        />
    <LinearLayout
        android:id="@+id/editlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
       >

        <LinearLayout
            android:id="@+id/comment_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zan_off" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_title_gray"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_topinglun"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_title_gray"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/news_image"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="3dp"
        android:background="@color/cutting_line" />

</LinearLayout>