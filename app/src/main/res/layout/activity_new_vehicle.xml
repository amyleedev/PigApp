<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:clipToPadding="true"
    android:fitsSystemWindows="true"
    
    android:background="@color/bg_title_white">

	<include layout="@layout/view_def_head" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/bg"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="514dp"
			android:gravity="top">

			<LinearLayout
				android:id="@+id/linearLayout1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="20dp"
				android:layout_marginTop="20dp"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="top"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:background="@drawable/shape_border_top"
					android:gravity="center"
					android:orientation="vertical">
					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="车     型："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_chexing"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:singleLine="true" />

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="数       量："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_shuliang"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="number"
							android:singleLine="true" />

					</LinearLayout>


					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="车辆尺寸："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_chicun"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="text"
							android:singleLine="true" 
							android:hint="长x宽x高"/>

					</LinearLayout>




					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="公司名称："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_gsname"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="text"
							android:singleLine="true" />

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="联系方式："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_tell"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="textPhonetic"
							android:singleLine="true" />

					</LinearLayout>




					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="公司地址："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_address"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="text"
							android:singleLine="true" />

					</LinearLayout>




					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="经营范围："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_about"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="text"
							android:singleLine="true" />

					</LinearLayout>



					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="备      注："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_remark"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:inputType="text"
							android:minLines="3"
							/>

					</LinearLayout>






				</LinearLayout>
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_marginLeft="10dip"
					android:text="上传图片:"
					android:id="@+id/img_add_tv" />
				<com.szmy.pigapp.widget.NoScrollGridView
					android:id="@+id/_gridView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10.0dip"
					android:background="@drawable/holder_bg_grey"
					android:columnWidth="100.0dip"
					android:listSelector="@drawable/grid_view_selector_with_transparent"
					android:numColumns="4"
					android:stretchMode="columnWidth" />

				<Button
					android:id="@+id/btn_submit"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:background="@drawable/shape_btn_selector"
					android:text="@string/submit_tx"
					android:textColor="@color/white" />
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

</LinearLayout>