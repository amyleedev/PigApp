<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:clipToPadding="true"
    android:fitsSystemWindows="true"
    
    android:background="@color/bg_title_white">

	<include layout="@layout/view_def_head" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/bg"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="514dp"
			android:gravity="top">

			<LinearLayout
				android:id="@+id/linearLayout1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="20dp"
				android:layout_marginTop="20dp"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="top"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:background="@drawable/shape_border_top"
					android:gravity="center"
					android:orientation="vertical">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="@string/pinzhong_tx"
							android:drawableRight="@drawable/star" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/pinzhong_tv_content"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:clickable="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:hint="@string/hint_tx"
							android:singleLine="true"
							android:drawableRight="@drawable/arrow_right"
							android:onClick="onClick" />
					</LinearLayout>




					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:id="@+id/price_tv"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="出售价："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_price"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:singleLine="true"
							android:inputType="numberDecimal" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="right"
							android:layout_width="100.0dip"
							android:layout_height="wrap_content"
							android:layout_marginLeft="-110.0dip"
							android:text="元/公斤" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/jiesuanjia_layout"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip"
						android:visibility="gone"
						>
						<TextView
							android:id="@+id/finalprice_tv"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="结算价："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_finalprice"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:singleLine="true"
							android:text=""
							android:inputType="numberDecimal" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="right"
							android:layout_width="100.0dip"
							android:layout_height="wrap_content"
							android:layout_marginLeft="-110.0dip"
							android:text="元/公斤" />
					</LinearLayout>


					<LinearLayout
						android:id="@+id/chulan_layout"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:id="@+id/time_tv"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="@string/chulan_shijian"
							android:drawableRight="@drawable/star" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/leave_start_timebox_tv_content"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:clickable="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:hint="@string/hint_tx"
							android:singleLine="true"
							android:drawableRight="@drawable/icon_date"
							android:onClick="onClick" />
					</LinearLayout>



					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:id="@+id/count_tv"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="出栏数量："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_count"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:singleLine="true"
							android:inputType="number" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="right"
							android:layout_width="100.0dip"
							android:layout_height="wrap_content"
							android:layout_marginLeft="-110.0dip"
							android:text="头" />
					</LinearLayout>


					<LinearLayout
						android:id="@+id/weight_layout"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:id="@+id/weight_tv"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="体重范围："
							android:drawableRight="@drawable/star" />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_weight"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:singleLine="true"
							android:inputType="numberDecimal" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:text="一"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:gravity="center"/>
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/et_weight2"
							android:background="@drawable/edit_search"
							android:layout_width="73dp"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:inputType="numberDecimal" />
						<TextView
							android:textSize="13sp"
							android:textColor="@color/edit_bg"
							android:gravity="right"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="10dp"
							android:text="公斤/头" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/shouzhuquyulayout"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip"
						>
						<TextView
							android:id="@+id/tv_address"
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="出售区域："
							android:drawableRight="@drawable/star" />
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="center_vertical"
							android:id="@+id/province_city_tv_content"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:clickable="false"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:hint="@string/hint_tx"
							android:singleLine="true"
							android:drawableRight="@drawable/arrow_right"
							android:onClick="onClick"
							/>
							
					</LinearLayout>

					<LinearLayout
						android:id="@+id/zhuangzhutailayout"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip"
						android:gravity="center"
						android:visibility="gone"
						>
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="装猪台："
							android:drawableRight="@drawable/star" />

						<RadioGroup
							android:id="@+id/rg_status"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:orientation="horizontal">

							<RadioButton
								android:id="@+id/radio_yes"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:text="有" />

							<RadioButton
								android:id="@+id/radio_no"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="无"
								android:layout_marginLeft="50dp"/>
						</RadioGroup>
					</LinearLayout>


					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5.0dip">
						<TextView
							android:textSize="@dimen/text_size"
							android:textColor="@color/black"
							android:gravity="center_vertical"
							android:layout_width="90.0dip"
							android:layout_height="wrap_content"
							android:text="备      注："

							 />
						<EditText
							android:textSize="@dimen/text_size"
							android:textColor="@color/edit_bg"
							android:gravity="top"
							android:id="@+id/et_remark"
							android:background="@drawable/edit_search"
							android:paddingLeft="10.0dip"
							android:paddingRight="10.0dip"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5.0dip"
							android:maxLines="4"
							android:minLines="3"
							/>

					</LinearLayout>




				</LinearLayout>

				<Button
					android:id="@+id/btn_submit"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:background="@drawable/shape_btn_selector"
					android:text="@string/submit_tx"
					android:textColor="@color/white" />
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

</LinearLayout>