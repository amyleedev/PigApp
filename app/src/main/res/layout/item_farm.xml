<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageview_farm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp" 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/default_title"/>

        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp" >

            <TextView
                android:id="@+id/farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="阿斯莫德养殖场"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/farm_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/farm_name"
                android:layout_toRightOf="@+id/farm_pigtype"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="河南省 郑州市"
                android:textColor="#ffaaaaaa"
                android:textSize="14sp" />

            
            <TextView
                android:id="@+id/farm_pigtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farm_name"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="内三元"
                android:textColor="#ffff5511"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/farm_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farm_pigtype"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大规模养殖"
                android:textColor="#ffaaaaaa"
                android:textSize="14sp" />
            
            
            <TextView
                android:id="@+id/farm_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/farm_pigtype"
                android:layout_toRightOf="@+id/farm_type"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="300头"
                android:textColor="#ffaaaaaa"
                android:textSize="14sp" />
            
            <TextView
                android:id="@+id/farm_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/farm_pigtype"
                android:layout_toRightOf="@+id/farm_number"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="12.2km"
                android:textColor="#ffaaaaaa"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" 
                android:layout_below="@+id/farm_number"
                android:layout_marginTop="14dp"
                android:layout_marginRight="3dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>