<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/view_def_head" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="企业名称："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="薛家岛养殖场"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="存栏数量："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/amount"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="354头"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="出栏数量："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sales"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="9000头/年"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sales"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="养殖规模："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sales"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pigType"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="小型养殖场"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />
        
        

        <TextView
            android:id="@+id/pigType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Type"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="生猪类型："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_pigType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Type"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pigType"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="外三元"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />
        
        
        
        
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pigType"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" 联 系 人 ："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pigType"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/username"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="夏家三"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="手机号码："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/phone"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="123456789"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" 邮      箱 ："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/email"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="8527415@qq.com"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" 地      址 ："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pigfarm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/address"
            android:text="河南省 郑州市"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        

        <ImageView
            android:id="@+id/more_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_title" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/rzlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
       android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/order_del"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rzsfxx" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证身份信息"
                android:layout_marginLeft="13dp"
                android:textColor="@color/orange"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_toedit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yhkrz" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证银行卡信息"
                android:layout_marginLeft="13dp"
                android:textColor="@color/pay_color2"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>