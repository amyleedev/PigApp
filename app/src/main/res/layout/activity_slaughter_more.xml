<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/view_def_head" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/slaughter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="企业名称："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_slaughter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slaughter_name"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" 联 系 人 ："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slaughter_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="所属行业："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/business"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="日屠宰量："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/number"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="手机号码："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/phone"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Q   Q号码："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/qq"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qq"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" 地      址 ："
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/more_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qq"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/address"
            android:text="暂无"
            android:textColor="#ffaaaaaa"
            android:textSize="16sp" />

        

        <ImageView
            android:id="@+id/more_imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_title" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/companyName"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/cutting_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_title_white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="收猪要求"
                android:textColor="#ffff5511"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/more_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#ff000000"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_rz"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="去认证"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@color/orange"
                android:layout_gravity="right"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>