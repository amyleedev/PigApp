<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_title_white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_def_head" />

    <TextView
        android:id="@+id/text_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="最近一月价格走势图"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/btn_wsy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/taocanbtn_check"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="外三元"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/btn_nsy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/taocanbtn_check"
            android:button="@null"
            android:gravity="center"
            android:text="内三元"
            android:layout_weight="1"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/btn_tzz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/taocanbtn_check"
            android:button="@null"
            android:gravity="center"
            android:text="土杂猪"
            android:textSize="13sp" />
</RadioGroup>
    <RadioGroup
        android:id="@+id/rg_radio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >
            <RadioButton
                android:id="@+id/btn_ym"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/taocanbtn_check"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:text="玉米"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/btn_dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/taocanbtn_check"
                android:button="@null"
                android:gravity="center"
                android:text="豆粕"
                android:layout_weight="1"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/btn_zlb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/taocanbtn_check"
                android:button="@null"
                android:gravity="center"
                android:text="猪粮比"
                android:layout_weight="1"
                android:textSize="13sp"
                android:visibility="invisible"/>

    </RadioGroup>

    <WebView
        android:id="@+id/wv_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />
</LinearLayout>


