<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bg_title_white" >

    <LinearLayout
        android:id="@+id/def_head_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:gravity="center_vertical"
        >
        <com.gc.materialdesign.views.ButtonIcon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@color/click_ripple_view"
            materialdesign:iconDrawable="@drawable/ic_back_black"
            android:onClick="back"/>
    </LinearLayout>

    <TextView
        android:id="@+id/def_head_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/def_title"
        android:textColor="@color/text_title_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/add_btn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/def_selector"
        android:contentDescription="@string/cd"
        android:scaleType="centerInside"
        android:src="@drawable/addinfo"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/add_btn2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/def_selector"
        android:contentDescription="@string/cd"
        android:scaleType="centerInside"
        android:src="@drawable/more"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_filtrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="地图"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="地图"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="全标记已读"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/radiocareuser"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/xingxing1"
        android:gravity="center"
        android:text="关注用户"
        android:textColor="@color/gray"
        android:textSize="10sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/cutting_line" />

</RelativeLayout>