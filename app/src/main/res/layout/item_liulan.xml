<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head_default" />

        <TextView
            android:id="@+id/news_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_image"
            android:ellipsize="end"
            android:hint="name"
            android:maxLines="2"
            android:textSize="17sp"
            android:textColor="@color/text_details"/>

        <TextView
            android:id="@+id/news_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_name_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_image"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:hint="time"
            android:singleLine="true"
            android:textColor="@color/cutting_line"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>