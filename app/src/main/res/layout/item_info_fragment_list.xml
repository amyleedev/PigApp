<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_list_item_height2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/item">

    <ImageView
        android:id="@+id/imagehead"
        android:layout_width="@dimen/sliding_head_height"
        android:layout_height="@dimen/sliding_head_height"
        android:layout_margin="10dp"
        android:src="@drawable/default_title"
        android:scaleType="centerCrop"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/info_list_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="name" />


        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/info_list_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="pigtype"
                android:gravity="left"
                   android:textColor="@color/item_line2_text_color"
           android:textSize="13sp"
           android:layout_weight="1"
                  />
            <TextView
                android:id="@+id/info_list_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="price"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_weight="1" />

          <TextView
                android:id="@+id/info_list_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="status"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:gravity="right"
                android:layout_weight="1" />


        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >

            <TextView
                android:id="@+id/info_list_mm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="type"
                android:gravity="left"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/info_list_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="num"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_weight="1" />

          <TextView
                android:id="@+id/info_list_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="time"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >
            <TextView
                android:id="@+id/info_tuzaichang_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="来源：河南双汇屠宰场"
                android:textColor="@color/item_line2_text_color"
                android:textSize="13sp"
                android:gravity="right"
                android:layout_weight="1"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>